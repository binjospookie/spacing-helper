{
  "name": "spacing-helper",
  "version": "2.1.0",
  "description": "Standalone helper for creating consistent spacing between the elements of your UI",
  "source": "src/index.ts",
  "main": "build/index.es.js",
  "module": "build/index.module.js",
  "types": "build/index.d.ts",
  "license": "MIT",
  "author": "Viktor Pasynok",
  "email": "binjospookie@gmail.com",
  "keywords": [
    "cssinjs",
    "emotion",
    "styled-components",
    "ui",
    "helper",
    "spacing"
  ],
  "private": false,
  "sideEffects": false,
  "files": [
    "build/index.es.js",
    "build/index.d.ts"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:binjospookie/spacing-helper.git"
  },
  "bugs": {
    "url": "https://github.com/binjospookie/spacing-helper/issues"
  },
  "homepage": "https://github.com/binjospookie/spacing-helper#readme",
  "scripts": {
    "build:js": "microbundle --compress --no-sourcemap --no-raw",
    "build:types": "scp src/index.d.ts ./build",
    "build": "rm -rf ./build && npm run build:js && npm run build:types",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "size": "npm run build && size-limit",
    "test": "jest  --coverage"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.1",
    "@size-limit/preset-small-lib": "4.4.2",
    "@types/jest": "25.1.4",
    "jest": "25.2.4",
    "microbundle": "0.11.0",
    "prettier": "2.0.2",
    "size-limit": "4.4.2",
    "ts-jest": "25.3.0",
    "tslint": "6.1.0",
    "typescript": "3.8.3"
  }
}
