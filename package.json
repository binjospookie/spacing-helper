{
  "name": "spacing-helper",
  "version": "1.0.3",
  "description": "Standalone helper for creating consistent spacing between the elements of your UI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "v.pasynok",
  "email": "binjospookie@gmail.com",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:binjospookie/spacing-helper.git"
  },
  "bugs": {
    "url": "https://github.com/binjospookie/spacing-helper/issues"
  },
  "homepage": "https://github.com/binjospookie/spacing-helper#readme",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run prepublish",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublish": "tsc && terser dist/index.js -m -c --output dist/index.js",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "size": "size-limit",
    "test": "ava"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.6.6",
    "@size-limit/preset-small-lib": "2.2.2",
    "ava": "2.4.0",
    "prettier": "1.19.1",
    "terser": "4.4.2",
    "ts-node": "8.5.4",
    "tslint": "5.20.1",
    "typescript": "3.7.3"
  },
  "ava": {
    "compileEnhancements": false,
    "concurrency": 10,
    "extensions": [
      "ts"
    ],
    "failFast": true,
    "require": [
      "ts-node/register"
    ]
  }
}
